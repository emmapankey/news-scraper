<div class="containerDiv">

    {{!-- Navbar --}}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">News Scraper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>
            </ul>
            {{!-- add [data-toggle="modal" data-target="#scrapedModal"] --}}
            <a class="btn btn-danger" id="scrape">SCRAPE NEW ARTICLES!</a>
        </div>
    </nav>

    {{!-- Modal after scrape --}}
    <div class="modal fade" id="scrapedModal" tabindex="-1" role="dialog" aria-labelledby="scrapedModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
                </div>
                <div class="modal-body">
                    <h3 class="modal-title" id="exampleModalLabel">Added 12 new articles!</h3>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="closeModal" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    {{!-- Modal for when there are no new articles to scrape --}}
    <div class="modal fade" id="noArticlesModal" tabindex="-1" role="dialog" aria-labelledby="scrapedModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
                </div>
                <div class="modal-body">
                    <h3 class="modal-title" id="exampleModalLabel">No new articles today. Check back tomorrow!</h3>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="closeModal" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <div class="jumbotron jumbotron-fluid text-center" id="fluid">
        <div class="container-fluid">
            <p class="title">Mongo Scraper</p>
            <p class="subTitle">New Scientist Edition</p>
        </div>
    </div>

    {{!-- Scraped Articles Panel --}}
    {{#each article}}
    <div class="card" id="articlesPanel">
        <div class="card-body">
            <div class="card-title">
                <h3><a class="card-link" target="_blank" href="{{url}}">{{headline}}</a>
                    <button class="btn btn-danger" id="saveBtn" value="submit" data-id={{_id}}>SAVE ARTICLE</button>
                </h3>
            </div>
            <div class="card-text">{{summary}}</div>
        </div>
    </div>
    {{/each}}

    {{!-- Footer --}}
    <footer class="footerDiv">
        <div class="footerContainer">
            <p class="footerText">&copy; Emma Pankey 2018</p>
            <p class="footerText">|</p>
            <p class="footerText">New Scientist Mongo Scraper</p>
        </div>
    </footer>

</div>